{
    "exclude": [
        "dist",
      ],
      "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "jsx": "react",
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
    
        "strict": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
    
        "skipLibCheck": true,

        "inlineSources": true,
        "sourceMap": true,
    
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
    
        "newLine": "lf",
    
        "noEmitOnError": true
    }
  }
